<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:defaultValue="@string/default_zipcode"
        android:inputType="number"
        android:key="zipcode"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/label_zipcode" />

    <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it. -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:defaultValue="0"
        android:entries="@array/temperature_scale_titles"
        android:entryValues="@array/temperature_scale_options"
        android:key="temp_scale"
        android:title="@string/temperature_scale" />

</PreferenceScreen>
